
<h1>Posts</h1>

<%= link_to "Crear nuevo post", new_post_path%>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>User</th>
        <th>Title</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td>Post id : <%= post.id %> </td>
            <td>User :    <%= post.user.email %> </td>
            <td>Title :   <%= post.title %> </td>
            
            <td>
                <%= link_to "Mostrar", post_path(post) %>
                <%= link_to "Editar", edit_post_path(post) %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>